<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userRepo"
          class="org.example.demo1207.repository.implementation.UserRepositoryImpl">
    </bean>

    <bean id="userService"
          class="org.example.demo1207.service.implementation.UserServiceImplementation">
        <constructor-arg ref="userRepo"/>
    </bean>

    <bean id="userController"
          class="org.example.demo1207.controller.UserController">
        <constructor-arg ref="userService"/>
    </bean>
</beans>